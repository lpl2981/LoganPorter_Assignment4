extends layout
block content
    h1="Note Editor"
    div
        form(method='post', action='', role='form')
            div.form-group
                label(for='title') Title:
                input#title.form-control(type='text', placeholder='Enter your note title (required)', name='title')
            div.form-group
                label(for='content') Content:
                textarea#content.form-control(placeholder='Enter your text here (optional)', name='content')
            button.btn.btn-secondary(type='reset') Cancel
            button.btn.btn-primary(type='submit') Save
    footer.footer
